<main>
        <p id="notice"></p>
        <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Editing Book</h2>
    <%= form_with model:@book, local:true do |f| %>
      <label for="inputTitle">Title</label>
      <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:""%>
      <label for="inputBody">Body</label>
      <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:""%>
      <%= f.submit "Update User" %>
    <% end %>