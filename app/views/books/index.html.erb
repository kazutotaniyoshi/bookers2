<main>
  <p id="notice"></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image %>
        <table class='table'>
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class='row'>
          <%= link_to "",edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog " %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book,url:books_path, local:true do |f| %>
          <div class="field">
            <%= f.label :Title %><br />
            <%= f.text_field :title, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :Body %><br />
            <%= f.text_field :body, autofocus: true %>
          </div>
          <div class="actions">
            <%= f.submit "Create Book" %>
          </div>
        <% end %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",size: "40x40"%>
                  </td>
                  <td><%= link_to book.title,book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
              <%= paginate @books %>
            </tbody>
          </table>
        </div>
  </div>
</main>
<footer>
  <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
  </body>
