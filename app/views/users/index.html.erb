<p id="notice"></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image,fallback: "no_image.jpg",size: "40x40" %>
        <table class='table'>
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class='row'>
          <%= link_to "",edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog " %>
        </div>
        <h2 class="mt-3">New book</h2>
         <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model: @book, local:true do |f| %>
          <div class="field">
            <%= f.label :Title %><br />
            <%= f.text_field :title, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :Body %><br />
            <%= f.text_field :body, autofocus: true %>
          </div>
          <div class="actions">
            <%= f.submit "Create Book" %>
          </div>
        <% end %>
      </div>
        <div class='col-md-8 offset-md-1'>
          <h2>Users</h2>
          <table class='table'>
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",size: "40x40" %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show",user_path(user.id) %></td>
              </tr>
              <% end %>
              <%= paginate @users %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
   <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>